#include<bits/stdc++.h>
using namespace std;

void solve(){
	int n;
	cin >> n;
	
	string s, ans;
	cin >> s;
	ans = s;

	for(int i = 1; i<n-2; i++){
		cin >> s;
		if(ans.back() == s[0]){
			ans = ans + s[1];
		}
		else{
			ans = ans + s;
		}
	}

	if(ans.size() == n){
		cout << ans << '\n';
	}
	else{
		cout << ans + 'a' << '\n';
	}
}

int main(){
	int t;
	cin >> t;
	while(t--){
		solve();
	}
}
